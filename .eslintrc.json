{
    "root": true,
    "env": {
        "browser": true,
        "es2020": true,
        "mocha": true,
        "amd": true,
        "node": true
    },
    "globals": {
        "expect": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "parser": "babel-eslint",
        "ecmaFeatures": {
            "legacyDecorators": true
        }
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1,
                "ignoredNodes": ["TemplateLiteral"]
            }
        ],
        "vue/script-indent": [
            "warn",
            4,
            {
                "baseIndent": 1
            }
        ],
        "vue/html-indent": [
            "warn",
            4,
            {
                "attribute": 1,
                "baseIndent": 1,
                "closeBracket": 0,
                "alignAttributesVertically": true,
                "ignores": []
            }
        ],
        "no-multi-spaces": "warn",
        "eqeqeq": "warn",
        "curly": "warn",
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "comma-dangle": [
            "warn",
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "brace-style": [
            "warn",
            "1tbs"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.vue"
            ],
            "rules": {
                "indent": "off"
            }
        }
    ]
}
